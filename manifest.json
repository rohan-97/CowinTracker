{
    "manifest_version": 2,
    "name": "Cowin Tracker",
    "short_name": "Cowin Tracker",
    "description": "Tracks the availability of covid-19 vaccine for specified region",
    "version": "0.1",
    "author": "Rohan Yadav",
    "browser_action": {
      "default_icon": "images/vaccine_logo.png",
      "default_title": "Cowin Tracker",
      "default_popup" : "html/popup.html"
    },
    "background" : {
      "scripts" : ["js/background.js"],
      "persistent": false
    },
    "permissions": [
      "storage"
    ]
  }
  